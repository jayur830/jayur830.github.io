{
  "name": "jayur830.github.io",
  "private": true,
  "packageManager": "pnpm@7.15.0",
  "scripts": {
    "build": "pnpm turbo run build",
    "build:fe": "pnpm turbo run build --filter fe",
    "build:be": "pnpm turbo run build --filter be",
    "dev": "pnpm turbo run dev",
    "dev:fe": "pnpm turbo run dev --filter fe",
    "dev:be": "pnpm turbo run dev --filter be",
    "lint": "pnpm turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release:fe": "pnpm turbo run release --filter fe",
    "release:be": "pnpm turbo run release --filter be"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@release-it/bumper": "^5.0.0",
    "@turbo/gen": "^1.9.7",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "8.45.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "release-it": "^16.1.3",
    "turbo": "latest"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    }
  }
}
